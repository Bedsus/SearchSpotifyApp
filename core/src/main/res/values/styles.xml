<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorActive</item>
        <item name="colorAccent">@color/colorActive</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:overScrollMode">never</item> <!-- Отключить тень при прокрутке -->
        <item name="android:splitMotionEvents">false</item> <!-- Отключить мультитач -->
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_steel_radius</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorBackground</item>
        <item name="itemIconTint">@drawable/selector_bottom_navigation</item>
        <item name="itemTextColor">@drawable/selector_bottom_navigation</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:theme">@style/Text12Regular</item>
    </style>

</resources>